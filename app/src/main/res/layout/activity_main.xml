<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.arduinocontrol.MainActivity"
    android:background="@drawable/back">

    <Button
        android:text="close connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/closecon"
        android:background="@android:drawable/alert_dark_frame"

        android:textColor="#FFFF"


        android:elevation="0dp" />

    <Button
        android:text="connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/closecon"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="#FFFF"
        android:id="@+id/connect" />

    <Button
        android:text=" open bluetooth "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/alert_dark_frame"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <Button
        android:text="close connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button8"
        android:background="@android:drawable/alert_dark_frame"

        android:textColor="#FFFF"


        android:elevation="0dp" />

    <Button
        android:text="close connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/close"
        android:background="@android:drawable/alert_dark_frame"

        android:textColor="#FFFF"


        android:elevation="0dp" />

    <Button
        android:text="paired devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="#FFFF"
        android:id="@+id/paired" />

    <Button
        android:text="off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/on"
        android:background="@drawable/cir2"
        android:id="@+id/off"
        android:textColor="#DD0000"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/cir"

        android:layout_above="@+id/off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="#009900"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/cir"

        android:layout_above="@+id/off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="#009900"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/cir"

        android:layout_above="@+id/off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="#009900"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/on"
        android:background="@drawable/cir"

        android:layout_above="@+id/off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="#009900"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        style="@style/Widget.AppCompat.Button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bvhg"
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/connect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"

        android:layout_above="@+id/closecon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:layout_toEndOf="@+id/off" />


</RelativeLayout>
